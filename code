#!/bin/bash

R="\033[1;31m"
G="\033[1;32m"
Y="\033[1;33m"
Cy="\033[1;36m"
M="\033[1;35m"
D="\033[0m"
Date=`date '+%A %B %d %Y'`




echo -e "$Y
                          _       ___   _  _               _
               __      __| |__   / _ \ | || |   _ __ ___  / |
   $G            \ \ /\ / /| '_ \ | | | || || |_ | '_ ' _ \ | |
                \ V  V / | | | || |_| ||__   _|| | | | | || |
   $R              \_/\_/  |_| |_| \___/    |_|  |_| |_| |_||_|

$D"

echo -e "$Cy    ###########################################################################"
echo -e "    #$M                       Termux Basic Training - TBT                       $D$Cy#"
echo -e "    ###########################################################################$D"

echo -e "$G $Date $D"
echo
